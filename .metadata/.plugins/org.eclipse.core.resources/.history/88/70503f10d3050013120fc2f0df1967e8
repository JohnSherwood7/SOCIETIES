using namespace std;

int main()
{
    vector<string> words;
    fstream f;
    f.open("temp.txt");
    string line;
    ofstream f2;
    f2.open("temp2.txt");
    while(getline(f, line)) {
        stringstream sline(line);       // make a stringstream of the line
        words.push_back(line);
        words.push_back("a,");
        for (int i = 0; i < words.size(); i++) {
            f2 << words[i];
        }
//        f.seekp(line.size());
//        f.write("a,\n",3);
    }
    f2.close();
    f.close();

}

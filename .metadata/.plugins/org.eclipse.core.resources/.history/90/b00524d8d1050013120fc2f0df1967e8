using namespace std;

int main()
{
    ofstream file;
    file.open("temp.txt");
    for (int i = 0; i < 2; i++) {
        for (int j = 0; j < 2; j++) {
            file << i << ",\n";
        }
    }
    file.close();
    fstream f;
    f.open("temp.txt");
    string line;
    if(!f.eof()) {
        string line;
        getline(f, line);   // read line from file into string
        stringstream sline(line);       // make a stringstream of the line
        cout << line << endl;
        f.seekp(4);
        f.write("a\n",2);
    }
    f.close();

}
